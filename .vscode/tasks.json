{
  "name": "npmTask",
  "version": "0.1.0",
  "suppressTaskName": true,
  "command": "npm",
  "isShellCommand": true,
  "args": [
    "run"
  ],
  "tasks": [{
      "taskName": "dev",
      //Run On Shift+Ctrl+B
      "isBuildCommand": true,
      "isTestCommand": false,
      "showOutput": "silent",
      "args": [
        "dev"
      ]
    },
    {
      "taskName": "prod",
      "isTestCommand": false,
      "showOutput": "silent",
      "args": [
        "prod"
      ]
    }
  ]
}

